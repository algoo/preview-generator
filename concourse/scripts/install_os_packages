# !/bin/bash
set -e
packages_dir="$(realpath $(dirname $0))/../../system_packages/debian"

apt-get update
apt-get install -qy $(cat "$packages_dir/os_packages.list")
apt-get install -qy $(cat "$packages_dir/optional_preview_packages.list")
echo "install drawio"
